extends layout

include mixins/_postCard
include mixins/_tagPagination

block content
  .inner
    h2 📝 #{tag || '포스팅 성향'}
    ul.tags
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}/page/1` class=(t._id === tag ? 'tag__link--active' : '')) 📎
            span.tag__text= t._id
            span.tag__count= t.count
  
    .posts
      each post in posts
        +postCard(post)
    +tagPagination(page, pages, count)