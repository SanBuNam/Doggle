extends layout

include mixins/_postCard
include mixins/_tagPagination

block content
  .inner
    h2 📝 #{tag || 'K-Food Recipes'}
    ul.tags
      li.tag
        a.tag__link(href=`/tags/page/1` class=(undefined == tag ? 'tag__link--active' : '')) 📎
          span.tag__text= 'All'
          span.tag__count= tags.filter(x => x._id)[0].count + ' Recipes'
      li.tag
        a.tag__link(href=`/tags/Wifi/page/1` class=('Wifi' === tag ? 'tag__link--active' : '')) 📎
          span.tag__text= 'Wifi'
          span.tag__count= tags.filter(x => x._id === 'Wifi')[0].count + ' Recipes'
      li.tag
        a.tag__link(href=`/tags/Vega/page/1` class=('Vega' === tag ? 'tag__link--active' : '')) 📎
          span.tag__text= 'Vega'
          span.tag__count= tags.filter(x => x._id === 'Vega')[0].count + ' Recipes'
      li.tag
        a.tag__link(href=`/tags/Licensed/page/1` class=('Licensed' === tag ? 'tag__link--active' : '')) 📎
          span.tag__text= 'Licensed'
          span.tag__count= tags.filter(x => x._id === 'Licensed')[0].count + ' Recipes'
  
    .posts
      each post in posts
        +postCard(post)
    +tagPagination(page, pages, count)