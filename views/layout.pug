doctype html
html(lang="ko")
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet' href='/dist/style.css')
    link(rel="shortcut icon" type="image/png" href="/images/icons/coding-school.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  
  body
    block header
      header
        nav.nav
          .nav__section
            li.nav__item
              a.nav__link(href="/", class=(currentPath.endsWith('/') ? 'nav__link--active' : '')) 홈
            each menu in h.menu
              li.nav__item
                a.nav__link(href=menu.slug, class=(currentPath.startsWith(menu.slug) ? 'nav__link--active' : '')) #{menu.title}
          .nav__section.nav__section--user
            if user
              li.nav__item: a.nav__link(href="/logout", class=(currentPath.startsWith('/logout') ? 'nav__link--active' : '')) 로그 아웃
              li.nav__item: a.nav__link(href="/account", class=(currentPath.startsWith('/account') ? 'nav__link--active' : '')) 내 포스트
            else
              li.nav__item: a.nav__link(href="/login", class=(currentPath.startsWith('/login') ? 'nav__link--active' : '')) 로그인
              li.nav__item: a.nav__link(href="/register", class=(currentPath.startsWith('/register') ? 'nav__link--active' : '')) 회원 가입
          .nav__section.nav__section--search
            .search
              input.search__input(type="text" placeholder="Search post" name="search")
              .search__results
              
    block messages
      if locals.flashes
        .inner
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`flash--${category}`)
                  p.flash__text!= message
                  button.flash__remove(onClick="this.parentElement.remove()") &times;
    
    block content

    footer.footer__section
      .footer__section--container
        .socialLinks
          h5 코딩 정보 공유 소셜
          p instagram : 
            span
              a(href="") @instagram
          p facebook : 
            span
              a(href="") @facebook
          p youtube : 
            span
              a(href="") @youtube
        .directContacts
          h5 일 관련 연락처
          p email : 
            span
              a(href="") stoicSanbunam@gmail.com
          p website : 
            span
              a(href="") dcs.com
          p meetup : 
            span
            a(href="") @meetup.com

    block scripts
      script(src="/dist/App.bundle.js")