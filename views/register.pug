extends layout

block content
  .inner
    h1 Free Membership
    .freeMembership
      form.form(action="/register" method="POST")
        h2 즐겁고 유익한 한인 코딩 커뮤니티
        label(for="name") 📛 닉네임
        input(type="text" name="name")
        label(for="email") ✉️ 이메일
        input(type="email" name="email")
        label(for="password") 🛂 패스워드
        input(type="password" name="password")
        label(for="password-confirm") 🈴 패스워드 확인
        input(type="password" name="password-confirm")
        input.btn.btn--green(type="submit" value="회원 가입하기")
    
      .bucketList
        span.postage.shadow 코딩 배우기
          .circle
        span.postage.shadow 포토폴리오 만들기
          .circle
        span.postage.shadow 취직하기
          .circle
        img(src="/images/photos/digital-nomads.jpg")